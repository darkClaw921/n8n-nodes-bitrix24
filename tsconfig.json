{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"outDir": "./dist/",
		"rootDir": "./",
		"types": ["node"],
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["credentials/**/*", "nodes/**/*", "nodes/**/*.json"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
} 